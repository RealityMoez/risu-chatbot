{
    "version": 2,
    "builds": [
        {
            "src": "/public/**",
            "use": "@vercel/static"
        },
        {
            "src": "/api/**",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}